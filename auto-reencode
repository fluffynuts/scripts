#!/bin/zsh
if test -z "$PROFILE"; then
  PROFILE="Vimeo YouTube 720p30"
fi

if test -z "$HANDBRAKE"; then
  HANDBRAKE=$(which HandBrakeCLI)
fi

function clear_line()
{
    echo -n "\r                                                                                                          \r"
}

DID_SOMETHING=0
RE_ENCODE="$(dirname $0)/auto-reencode-one";

for f in $*; do
  while test $# -gt 0; do
    DID_SOMETHING=1
    if test -f "$f"; then
      echo "process one: $1"
      $RE_ENCODE "$f"
    elif test -d "$f"; then
      export LEAVE_STATUS=1
      if test -z "$MAX_AGE_DAYS"; then
        find "$f" -iname '*.mkv' -o -iname '*.avi' -o -iname '*.mp4' -exec $RE_ENCODE {} \;
      else
        find "$f" -iname '*.mkv' -o -iname '*.avi' -o -iname '*.mp4' -mtime -$MAX_AGE_DAYS -exec $RE_ENCODE {} \;
      fi
      clear_line
    else
      echo "Error: please supply a dir or file to work with (not $1)"
      exit 1
    fi
    shift
  done
done

if test $DID_SOMETHING = "0"; then
  echo "Please invoke with a dir or file to work with"
fi
