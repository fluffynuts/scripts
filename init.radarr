MONO=$(which mono)
DAEMON=/home/daf/apps/Radarr/Radarr.exe
PIDFILE=/var/run/radarr.pid
USER=daf

depend() {
	need net
	need localmount
}

start() {
	start-stop-daemon --background --start --exec $MONO --make-pidfile --pidfile $PIDFILE --user $USER -- $DAEMON
}

stop() {
	start-stop-daemon --stop --pidfile $PIDFILE
}
