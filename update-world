#!/bin/bash
SUFFIX=""
if which emerge &> /dev/null; then
  SUFFIX="gentoo"
fi
if test -z "$SUFFIX" && which pacman &> /dev/null; then
  SUFFIX="arch"
fi
if test -z "$SUFFIX" && which apt-get &> /dev/null; then
  SUFFIX="debian";
fi

if test -z "$SUFFIX"; then
  echo "this script does not support your platform";
  exit 1
fi

$(dirname $0)/update-world.$SUFFIX "$*"
