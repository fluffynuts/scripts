#!/bin/bash
LINE_BREAK="-------------------------------"
echo -e "\nPerforming updates from arch repos...\n"
sudo pacman -Syu

echo -e "\n\n${LINE_BREAK}\nPerforming AUR upgrades...\n"
if test -x "$GRIMAUR_LOCATION"; then
  "$GRIMAUR_LOCATION" update
else
  yay -Syu
fi

if ! test -z "$(pacman -Qdtq)"; then
  echo -e "\n\n${LINE_BREAK}\nRemoving unused dependencies...\n"
  sudo pacman -Rns $(pacman -Qdtq)
fi
